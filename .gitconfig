[core]
	editor = nvim
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[pull]
	ff = only
[status]
	showUntrackedFiles = all
[alias]
	co = checkout
	sw = switch
	cp = cherry-pick
	ri = rebase --interactive --autosquash
	unstage = restore --staged
	amend = commit --amend
	fixup = commit --fixup
	pf = push --force-with-lease
	graph = !git-graph
	root = !git-root
	sm = !git-switch-to-main
	um = !git-update-main
	sf = !git-switch-fuzzy
	af = !git-add-fuzzy

[include]
	path = ~/.config/git/local.ini
