[core]
	editor = nvim
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[pull]
	ff = only
[alias]
	add-fuzzy = !git-utils add-fuzzy
	unstage = restore --staged
	amend = commit --amend
	fixup = commit --fixup
	co = checkout
	sw = switch
	pf = push --force-with-lease
	cp = cherry-pick
	ri = rebase --interactive --autosquash
	graph = "!f() { git log --graph --oneline --all -${1:-10}; }; f"
	root = !git-utils root
	update-main = !git-utils update-main
	switch-fuzzy = !git-utils switch-fuzzy
	switch-to-main = !git-utils switch-to-main

[include]
	path = ~/.config/git/local.ini
